<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditCourseActivity">

    <RelativeLayout
        android:id="@+id/relLayoutInsideEC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"

        android:elevation="10dp"
        android:background="@drawable/shadow"

        >

        <TextView
            android:id="@+id/courseCodeTVEditCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course Code"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="5dp"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/courseCodeEditCourseEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Course Code"
            android:layout_below="@id/courseCodeTVEditCourse"
            android:padding="20dp"
            />

        <TextView
            android:id="@+id/courseNameTVEditCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course Name"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="5dp"
            android:layout_below="@id/courseCodeEditCourseEditText"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/courseNameEditCourseEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Course Name"

            android:layout_below="@+id/courseNameTVEditCourse"

            android:padding="20dp"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/saveEditBtnEditCourseAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Edit"

        android:layout_alignParentRight="true"
        android:layout_below="@+id/relLayoutInsideEC"

        android:layout_margin="20dp"
        />

</RelativeLayout>