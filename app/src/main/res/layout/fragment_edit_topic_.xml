<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditTopicFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relLayoutHeader"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/gradient1" />

        <RelativeLayout
            android:layout_below="@id/relLayoutHeader"
            android:id="@+id/relLayoutInET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:elevation="10dp"
            android:background="@drawable/shadow">

            <TextView
                android:id="@+id/topicTVEditTopic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Topic"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp"
                android:textColor="@color/text_header"/>

            <EditText
                android:id="@+id/topicEditTopicEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_below="@+id/topicTVEditTopic"
                android:textColor="@color/text_paragraph"
                android:hint="Topic" />

            <TextView
                android:id="@+id/descriptionTVEditTopic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp"
                android:layout_below="@+id/topicEditTopicEditText"
                android:textColor="@color/text_header"/>

            <EditText
                android:id="@+id/descriptionEditTopicEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:layout_below="@+id/descriptionTVEditTopic"
                android:textColor="@color/text_paragraph"
                android:hint="Description" />

        </RelativeLayout>

        <Button
            android:id="@+id/deleteTopicBtnEditTopicAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/relLayoutInET"
            android:layout_margin="20dp"

            android:layout_toLeftOf="@+id/saveEditBtnEditTopicAct"

            android:text="Delete"
            android:background="@drawable/bg_danger"
            android:textColor="@color/text_white"
            android:textSize="17dp"/>

        <Button
            android:id="@+id/saveEditBtnEditTopicAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/relLayoutInET"
            android:layout_margin="20dp"
            android:layout_alignParentRight="true"

            android:text="Save"
            android:background="@drawable/bg_primary"
            android:textColor="@color/text_white"
            android:textSize="17dp"/>

    </RelativeLayout>


</androidx.core.widget.NestedScrollView>