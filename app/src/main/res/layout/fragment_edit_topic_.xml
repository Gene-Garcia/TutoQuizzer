<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditTopicFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relLayoutInET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:elevation="10dp"
            android:background="@drawable/shadow">

            <EditText
                android:id="@+id/topicEditTopicEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:hint="Topic" />

            <EditText
                android:id="@+id/descriptionEditTopicEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:layout_below="@+id/topicEditTopicEditText"

                android:hint="Description" />

        </RelativeLayout>

        <Button
            android:id="@+id/saveEditBtnEditTopicAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/relLayoutInET"
            android:layout_margin="20dp"
            android:layout_alignParentRight="true"

            android:text="Save Edit" />

    </RelativeLayout>


</androidx.core.widget.NestedScrollView>