<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relLayoutInQ1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:elevation="10dp"
            android:background="@drawable/shadow"
            >

            <TextView
                android:id="@+id/displaySelectionTextViewQuizAct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="School Year > Course > Quarter"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center"

                android:textColor="@color/colorPrimary"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/questionTextViewQuizAct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relLayoutInQ1"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:padding="70dp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="LOREM LOREM LOREM LOREM LOREM" />

        <RelativeLayout
            android:id="@+id/relLayoutInQ2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/questionTextViewQuizAct"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shadow"
            android:elevation="10dp"
            android:padding="20dp">

            <RadioGroup
                android:id="@+id/radGroupQuizAct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rBtnAQuizAct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="20dp"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/rBtnBQuizAct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="20dp"
                    android:text=""
                    android:textColor="@color/colorPrimary" />

                <RadioButton
                    android:id="@+id/rBtnCQuizAct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="20dp"
                    android:text=""
                    android:textColor="@color/colorPrimary" />

                <RadioButton
                    android:id="@+id/rBtnDQuizAct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="20dp"
                    android:text=""
                    android:textColor="@color/colorPrimary" />


            </RadioGroup>

        </RelativeLayout>

        <Button
            android:id="@+id/saveAnswerBtnQuizAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relLayoutInQ2"
            android:text="Start"
            android:layout_margin="20dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>